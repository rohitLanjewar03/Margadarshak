<% layout('layouts/boilerplate') %>

<div class="container-fluid">
    <div class="row">
        <!-- Left side with image (hidden on small screens) -->
        <div class="col-md-6 d-none d-md-block" style="background-color: #e0f7fa;">
            <img src="https://thumbs.dreamstime.com/b/online-learning-e-learning-online-education-distance-learning-education-online-course-student-studying-computer-illustration-83348348.jpg" 
                alt="EduTrack Illustration" class="img-fluid"
                style="height: 100%">
        </div>

        <!-- Right side with registration form -->
        <div class="col-md-6">
            <div class="p-5">
                <h2 class="mb-4">Register your Account</h2>
                <form action="/register" method="POST" class="validated-form" novalidate>
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input type="text" class="form-control" id="username" name="username" placeholder="Rakhi Sharma" required autofocus>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="rakhisharma@gmail.com" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="contact">Contact No.</label>
                        <input type="number" class="form-control" id="contact" name="contact" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="role">Role</label>
                        <select class="form-control" id="role" name="role" required>
                            <option value="" disabled selected>Select your role</option>
                            <option value="student">Student</option>
                            <option value="teacher">Teacher</option>
                        </select>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Register</button>
                </form>

                <div class="text-center mt-3">
                    <p>Already have an account? <a href="/login">Log in</a></p>
                    <p class="text-muted">- OR -</p>
                    <button type="button" class="btn btn-outline-secondary btn-block">
                        <img src="https://img.icons8.com/color/16/000000/google-logo.png" alt="Google Logo"> Sign up with Google
                    </button>
                </div>

                <p class="text-center mt-5 text-muted">Smart, Innovative, and Analytical Learning!</p>
            </div>
        </div>
    </div>
</div>
